use strict;
use warnings;
use autodie;
use 5.010;

use App::Pstatus::Check::Cgit;
use App::Pstatus::Check::Freshmeat;
use App::Pstatus::Check::Ikiwiki;
use App::Pstatus::List::Cgit;
use App::Pstatus::Out::XHTML;
use Config::Tiny;
use File::BaseDir qw(config_files);

my $conf = load_config();

sub load_config {
	my $conffile = config_files('pstatus/config');
	return Config::Tiny->read($conffile);
}

# check_cpan

# check_github

# check_debian

# check_gentoo

# check_arch

my $project = App::Pstatus::List::Cgit->get();

for my $p (keys %{$project}) {
	$project->{$p}->{git} = App::Pstatus::Check::Cgit->run($p);
	$project->{$p}->{web} = App::Pstatus::Check::Ikiwiki->run($p);
	$project->{$p}->{freshmeat} = App::Pstatus::Check::Freshmeat->run($p,
		$conf->{freshmeat}->{token});
}

App::Pstatus::Out::XHTML->write($project);

__END__

