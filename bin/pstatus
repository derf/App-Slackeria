use strict;
use warnings;
use autodie;
use 5.010;

use App::Pstatus::Plugin;
use App::Pstatus::List::Cgit;
use App::Pstatus::Out::XHTML;
use Config::Tiny;
use File::BaseDir qw(config_files);

my $conf = load_config();
my %plugin;

for my $key (grep { $_ =~ qr{ ^ plugin_ }ox } keys %{$conf}) {
	my ($name) = ($key =~ qr{ ^ plugin _ (.+) $ }ox);
	$plugin{$name} = App::Pstatus::Plugin->load($name, %{$conf->{$key}});
}

sub load_config {
	my $conffile = config_files('pstatus/config');
	return Config::Tiny->read($conffile);
}

# check_cpan

# check_github

# check_debian

# check_gentoo

# check_arch

my $project = App::Pstatus::List::Cgit->get();

for my $p (keys %{$project}) {
	$project->{$p}->{git} = $plugin{cgit}->run(name => $p);
	$project->{$p}->{freshmeat} = $plugin{freshmeat}->run(name => $p);
	$project->{$p}->{web} = $plugin{ikiwiki}->run(name => $p);
}

App::Pstatus::Out::XHTML->write($project);

__END__

