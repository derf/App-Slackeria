use strict;
use warnings;
use autodie;
use 5.010;

use App::Pstatus::Plugin;
use App::Pstatus::Out::XHTML;
use Config::Tiny;
use File::BaseDir qw(config_files);

my $conf = load_config('config');
my %plugin;
my $project;

for my $p (split(/ /, $conf->{projects}->{list})) {
	$project->{$p} = {};
}
delete $conf->{projects};

while (my ($name, $section) = each %{$conf}) {
	$plugin{$name} = App::Pstatus::Plugin->load($name, %{$section});
}

sub load_config {
	my ($file) = @_;
	my $conffile = config_files("pstatus/${file}");
	if ($conffile) {
		return Config::Tiny->read($conffile);
	} else {
		return {};
	}
}

# check_cpan

# check_github

# check_debian

# check_gentoo

# check_arch

for my $p (keys %{$project}) {

	my $pconf = load_config($p);

	for my $name (keys %plugin) {
		my $cconf = $pconf->{$name} // {};
		$cconf->{name} //= $p;
		$project->{$p}->{$name} = $plugin{$name}->run(%{$cconf});
	}
}

App::Pstatus::Out::XHTML->write($project);

__END__

